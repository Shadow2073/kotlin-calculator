<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/grey"
        android:inputType="textPersonName"
        android:textSize="40pt"
        android:gravity="right|center"
        android:text="0" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="C"
                android:onClick="clearEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buSign"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buPercentage"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="%"
                android:onClick="percentageEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="/"
                android:onClick="operatorEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="7"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="8"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="9"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="*"
                android:onClick="operatorEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="4"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="5"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="6"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buAdd"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="+"
                android:onClick="operatorEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="1"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="2"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="3"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buSubtract"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="0"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/bu00"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="00"
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buDecimal"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="."
                android:onClick="numberEvent"
                android:background="@color/black"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buBackspace"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="BKSP"
                android:onClick="backspaceEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buLeftBracket"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="("
                android:onClick="numberEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buRightBracket"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text=")"
                android:onClick="numberEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buPower"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="^"
                android:onClick="operatorEvent"
                android:background="@color/blue"
                android:layout_margin="1pt">
            </Button>
            <Button
                android:id="@+id/buEqualto"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textSize="10pt"
                android:text="="
                android:onClick="equaltoEvent"
                android:background="@color/teal_200"
                android:layout_margin="1pt">
            </Button>


        </TableRow>





    </TableLayout>

</LinearLayout>